# ============================================
# ENVIRONMENT
# ============================================
# 값: development, staging, production
ENVIRONMENT=development

# ============================================
# API & SERVER
# ============================================
# 백엔드 서버 주소
API_BASE_URL=http://localhost:8000

# 프론트엔드 서버 주소 (결제 후 리다이렉션 용도)
FRONTEND_BASE_URL=http://localhost:3000

# FastAPI 서버 포트
SERVER_PORT=8000

# 디버그 모드 (프로덕션에서는 False)
DEBUG=True

# ============================================
# DATABASE
# ============================================
# PostgreSQL 연결 문자열
# 형식: postgresql://username:password@localhost:5432/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/kbeauty

# ============================================
# PAYPAL
# ============================================
# PayPal 클라이언트 ID
# 획득처: https://developer.paypal.com/dashboard/
# Sandbox 환경에서만 테스트용 자격증명 사용
PAYPAL_CLIENT_ID=your_sandbox_client_id

# PayPal 클라이언트 시크릿
# 획득처: https://developer.paypal.com/dashboard/
PAYPAL_CLIENT_SECRET=your_sandbox_client_secret

# PayPal 모드: sandbox (테스트) 또는 live (프로덕션)
PAYPAL_MODE=sandbox

# ============================================
# EMAIL (Google SMTP)
# ============================================
# Gmail SMTP 서버 주소 (변경 금지)
SMTP_SERVER=smtp.gmail.com

# Gmail SMTP 포트 (변경 금지)
SMTP_PORT=587

# Gmail 이메일 주소
# 획득처: Gmail 계정
SMTP_USER=your_email@gmail.com

# Gmail 앱 비밀번호
# 획득 방법:
# 1. 2단계 인증 활성화: https://myaccount.google.com/security
# 2. 앱 비밀번호 생성: 보안 → 앱 비밀번호
# 3. 앱(메일) + 기기(Windows PC) 선택
# 4. 생성된 16자 비밀번호 복사 (띄어쓰기 제거)
SMTP_PASSWORD=xxxx xxxx xxxx xxxx

# 이메일 발신자 주소
SMTP_FROM_EMAIL=your_email@gmail.com

# 이메일 발신자 이름
SMTP_FROM_NAME=K-Beauty Shop

# ============================================
# BUSINESS SETTINGS
# ============================================
# 주문 1개당 이윤 (페소 단위)
# 배송료를 제외한 순이윤
# 어필리에이트는 이윤의 20%
PROFIT_PER_ORDER=80

# 어필리에이트 커미션 비율 (소수점)
# 0.2 = 20% (이윤의 20%를 어필리에이트에게 지급)
AFFILIATE_COMMISSION_RATE=0.2

# ============================================
# LOGGING
# ============================================
# 로그 레벨: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# FRONTEND (Vite)
# ============================================
# 백엔드 API 주소 (프런트에서 API 호출 시)
# Vite에서는 VITE_ 프리픽스 필수
VITE_API_BASE_URL=http://localhost:8000

# PayPal 클라이언트 ID (프런트 결제 버튼용)
# 획득처: https://developer.paypal.com/dashboard/
VITE_PAYPAL_CLIENT_ID=your_sandbox_client_id

# 앱 이름 (선택)
VITE_APP_NAME=K-Beauty Shop
